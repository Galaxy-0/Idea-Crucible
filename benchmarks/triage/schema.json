{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Idea Triage Benchmark Item",
  "type": "object",
  "required": ["id", "idea_path", "gold_decision"],
  "properties": {
    "id": {"type": "string", "description": "Unique item id"},
    "idea_path": {"type": "string", "description": "Path to idea YAML under ideas/"},
    "gold_decision": {"type": "string", "enum": ["deny", "caution", "go"], "description": "Expected decision"},
    "gold_redlines": {"type": "array", "items": {"type": "string"}, "description": "Expected rule ids (optional)"},
    "notes": {"type": "string"}
  }
}

